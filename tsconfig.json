{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@clients/*": [
        "./clients/*"
      ],
      "@parsing/*": [
        "parsing/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@transforming/*": [
        "./transforming/*"
      ],
      "@common/*": [
        "./common/*"
      ]
    }
  },
  "preserveSymlinks": false,
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}